[%- url = "http://musicbrainz.org/${entity.entity_type}/${entity.mbid}" -%]
[%- WRAPPER 'components/box.tt' header="Link to ${entity.name}" -%]
    [%- WRAPPER 'layout/guidelines.tt' -%]
        [%- create_guideline(l('The permanent link for the MusicBrainz ' _ entity.entity_type _ entity_link(entity) _ ' is <a href=\"' _ url_escape(url) _ '\">' _ html_escape(url) _ '</a>.')) -%]
        [%- create_guideline(l('If you wish to add a permanent link to the MusicBrainz ' _entity.entity_type _ entity_link(entity) _ ' from your web page or blog, choose one of the link styles below.')) %]
        [%- create_guideline(l('Just highlight (Ctrl+a) the content in the textbox, and copy (Ctrl+c) and paste (Ctrl+v) it into your web page or blog.')) -%]
    [%- END -%]
    <p>
        [% l('If you wish to use a text link (e.g. [_1], you can use the following markup:', entity_link(entity, 1)) %]
    </p>
    <table id="id-table-link">
        <tr>
            <th>
                [%- l('Text Link:') -%]
            </th>
            <td>
                [%# This is a bit funky, but it's to make sure no extra spaces get added %]
                <textarea id="id_link" cols="80" rows="5" title=l('Select text')>
                    [%- "<a href=\"$url\">$entity.name</a>" | html %]
                </textarea>
            </td>
        </tr>
    </table>
    <p>
        [% l('If you wish to use a link with an icon (e.g. [_1], you can use the following markup:', entity_link(entity, 1)) %]
    </p>
    <table id="id-table-icon-link">
        <tr>
            <th>
                [%- l('Text Link') -%]
            </th>
            <td>
                <textarea cols="60" rows="5" title=l('Select text')>
                    [%- "<a href=\"$url\"><img src=\"http://musicbrainz.org/static/images/entity/${entity.entity_type}_small.gif\" />$entity.name</a>" | html -%]
                </textarea>
            </td>
        </tr>
    </table>
[% END %]
