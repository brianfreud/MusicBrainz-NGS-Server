[%- classes = class.split('\s+');
    IF for.form;
        classes.push(for.required_text);
        classes.push('error') IF for.errors.size;
    END;
-%]

[%- IF for -%]
    <label id="label-[% form_id(for) %]" for="[% form_id(for) %]" [% class(classes) %]>
        [% label %]
    </label>
[%- ELSE -%]
    <div class="label">
        [% label %]
    </div>
[%- END -%]
