[% WRAPPER 'label/layout.tt' title="Merge" %]
    [% WRAPPER 'components/box.tt' header="Merge ${label.name} into ${new_label.name}" %]
        <p>
            [% l('Are you sure you want to merge the label [_1] into [_2]?'), entity_link(label), entity_link(new_label)) %]
        </p>
        [%- WRAPPER "forms/form.tt" -%]
            [% INCLUDE "forms/edit-note.tt" %]
            [% INCLUDE "forms/submit.tt" label=l('Enter Edit') %]
        [%- END -%]
    [% END %]
[% END %]
